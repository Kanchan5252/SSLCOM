.bg-gray-100.h-screen
  .grid.grid-cols-1.md:grid-cols-12.gap-4.pt-16
    .col-span-1.md:col-start-5.md:col-span-4
      %h2.mb-5.text-3xl.text-center Create SSL.com Account
      %div
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field.mb-4
            = f.text_field :username, autofocus: true, autocomplete: "username", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", :placeholder=>"Username"
          .field.mb-4
            = f.text_field :first_name, autofocus: true, autocomplete: "email", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", :placeholder=>"First Name"
          .field.mb-4
            = f.text_field :last_name, autofocus: true, autocomplete: "email", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", :placeholder=>"Last Name"
          .field.mb-4
            = f.email_field :email, autofocus: true, autocomplete: "email", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", :placeholder=>"Email (name@example.com)"
          .field.mb-4
            = f.password_field :password, autocomplete: "new-password", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", :placeholder=>"password"
          .field.mb-4
            = f.password_field :password_confirmation, autocomplete: "new-password", :class=>"border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3", :placeholder=>"Confirm Password"
            - if @minimum_password_length
              %span.text-xs
                Password require:
                %em
                  (#{@minimum_password_length} characters minimum)
            %br/
          .actions
            = f.submit "Create Account", :class => "rounded-lg w-full bg-lime-400  font-medium text-white py-2 hover:bg-lime-500 cursor-pointer uppercase"
